<div class="row">
  <div class="col-lg-8 col-lg-offset-2">
    <div class="cpfl tyyj-gy">
      <div class="wrap">
        <div class="daohang"> <span></span><a href="/">首页</a><span> &gt; </span><a href="/products">产品中心</a> &gt;   </div>
      </div>
      <div class="box">
        <div class="list_paixu">
          <dl>
            <dt>白酒定制：</dt>
            <dd>
              <a href="#">婚宴定制</a>
              <a href="#">爱情定制</a>
              <a href="#">生日（含寿宴）定制</a>
              <a href="#">个性定制</a>
              <a href="#">企业定制</a>
            </dd>
          </dl>
         <dl>
            <dt>葡萄酒定制：</dt>
            <dd>
              <a href="#">婚宴定制</a>
              <a href="#">爱情定制</a>
              <a href="#">生日（含寿宴）定制</a>
              <a href="#">个性定制</a>
              <a href="#">企业定制</a>
            </dd>
          </dl>
        </div>
      </div>
    </div>
    <br />

    <div class="productslist">
        <% @products.each do |product| %>
            <%= link_to(product_path(product), { :class => "col-xs-12 col-sm-6 col-md-4 col-lg-3" }) do %>
            <div class="thumbnail">
            	<% if product.image.present? %>
                	<%= image_tag(product.image.thumb.url) %>
            	<% else %>
            		<%= image_tag("http://placehold.it/300x300&text=No Pic") %>
            	<% end %>
                <div class="caption text-center">
                    <h3>¥<%= product.price %></h3>
                    <p><%= product.title %></p>
                </div>
            </div>
            <% end %>
        <% end %>
    </div>
    <br />
    <br />
  </div>
</div>



