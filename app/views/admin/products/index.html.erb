<h1>产品</h1>
<div class="pull-right">
  <%= link_to("Add a product", new_admin_product_path, :class => "btn btn-primary btn-default" ) %>
</div>

<br><br>

<table class="table table-bordered">
  <% @products.each do |product| %>
  <tr>
    <td>
      <%= render_product_status(product) %>
      <%= link_to(product.title, admin_product_path(product)) %>
    </td>
    <td>
      <%= link_to("Edit", edit_admin_product_path(product)) %>
      <%= link_to("Destroy", admin_product_path(product), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
      <% if product.is_hidden %>

    <%= link_to("下架", publish_admin_product_path(product), :method => :post, :class => "btn btn-xs btn-success") %>
  <% else %>
    <%= link_to("下架", hide_admin_product_path(product), :method => :post, :class => "btn btn-xs btn-danger") %>
  <% end %>
    </td>
    <td>
      <%= product.created_at %>
    </td>
  </tr>
  <% end %>
</table>
